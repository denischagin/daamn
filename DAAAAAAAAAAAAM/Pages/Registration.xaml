<Page x:Class="DAAAAAAAAAAAAM.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DAAAAAAAAAAAAM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <StackPanel>
            <Label Content="Пользователь" />
            <TextBox x:Name="username" />

            <Label Content="Пароль" />
            <PasswordBox x:Name="password" />

            <Label Content="Повторите пароль" />
            <PasswordBox x:Name="repeatPassword" />

            <Button x:Name="registrationButton" Content="Зарегистрироваться" Click="registrationButton_Click" />
            <Button x:Name="loginButton" Content="Войти" Click="loginButton_Click" />
        </StackPanel>
    </Grid>
</Page>
